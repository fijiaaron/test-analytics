<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
    xmlns:ttywidgets='urn:import:com.google.testing.testify.risk.frontend.client.view.widgets'>

  <!-- TODO(chrsmith): Add readonly mode for non-editor users. -->

  <!-- DataRequest -->
  <gwt:VerticalPanel>
    <gwt:HTMLPanel>
      <hr class="tty-ItemDivider" />
    </gwt:HTMLPanel>
    <gwt:HorizontalPanel ui:styleName="tty-ItemContainer">
      <gwt:VerticalPanel ui:styleName="tty-ItemContent">
        <gwt:Label ui:field="dataRequestSourceName" ui:styleName="tty-ItemName" />
        <gwt:VerticalPanel ui:field="dataRequestParameters" addStyleNames="tty-ItemContent" />
        <gwt:Anchor ui:field="addParameterLink">Add request parameter</gwt:Anchor>
        <gwt:HorizontalPanel>
          <gwt:Button ui:field="updateDataRequest">Save</gwt:Button>
          <gwt:Button ui:field="cancelUpdateDataRequest">Cancel</gwt:Button>
        </gwt:HorizontalPanel>
      </gwt:VerticalPanel>
      <gwt:Cell width="20">
        <gwt:Image ui:field="deleteDataRequestImage" ui:styleName="tty-ItemDeleteImage" ui:url="images/x.png" />
      </gwt:Cell>
    </gwt:HorizontalPanel>
  </gwt:VerticalPanel>
</ui:UiBinder>
