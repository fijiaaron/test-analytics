<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
    xmlns:ttywidgets='urn:import:com.google.testing.testify.risk.frontend.client.view.widgets'>

  <!-- Attributes -->
  <gwt:VerticalPanel ui:styleName="tty-Page tty-AttributesPage">
    <ttywidgets:PageSectionVerticalPanel headerText="Attributes">

      <gwt:FlowPanel ui:styleName="tty-PageIntroText">
        <gwt:InlineLabel>Attributes are ways a marketer would describe your application, such as "Fast" or "Secure". Attributes in the ACC model 
  allow you to map Capabilities to business requirements.</gwt:InlineLabel>
        <gwt:Anchor ui:styleName="tty-InlineAnchor" target="_blank" href="http://code.google.com/p/test-analytics/wiki/InAppDocumentation#Attributes">Learn more</gwt:Anchor>
      </gwt:FlowPanel>

      <gwt:HorizontalPanel ui:styleName="tty-ItemContainer" ui:field="addNewAttributePanel" visible="false">
        <gwt:TextBox ui:field="newAttributeName" />
        <gwt:Button ui:field="addNewAttributeButton">Add</gwt:Button>
      </gwt:HorizontalPanel>

      <ttywidgets:SortableVerticalPanel ui:field="attributesPanel" />

    </ttywidgets:PageSectionVerticalPanel>
  </gwt:VerticalPanel>
</ui:UiBinder>
